@model ASPCORE.Models.ViewModels.LoanuserViewModels
@using ASPCORE.Extensions
@{
    ViewData["Title"] = "Insert";
}

<h2>Insert</h2>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
<div class="container table-wrapper-scroll-y my-custom-scrollbar">
    <h2 class="text-center">Bike Register Form</h2>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 pb-5">

            <!--Form with header-->
            <form method="post" action="Insert" enctype="multipart/form-data">
                <div class="card border-primary rounded-0">
                    <div class="card-header p-0">
                        <div class="bg-info text-white text-center py-2">
                            <h3><i class="fa fa-envelope"></i> Bike Register</h3>
                            @*<p class="m-0">Con gusto te ayudaremos</p>*@
                        </div>
                    </div>
                    <div class="card-body p-3">
                        <!--Body-->
                        @*LastName*@
                        <div class="form-group">
                            <div class="input-group-text" style="color:dimgrey;font-weight:bold;">Enter FirstName</div>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                                </div>
                                <input asp-for="FirstName" class="form-control" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        @*LastName*@
                        <div class="form-group">
                            <div class="input-group-text" style="color:dimgrey;font-weight:bold;">Enter LastName</div>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-gas-pump"></i></div>
                                </div>
                                <input asp-for="LastName" class="form-control" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        @*Address*@
                        <div class="form-group">
                            <div class="input-group-text" style="color:dimgrey;font-weight:bold;">Enter adress</div>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-rupee-sign"></i></div>
                                </div>
                                <input asp-for="address" class="form-control" />
                            </div>
                            <span asp-validation-for="address" class="text-danger"></span>
                        </div>
                        @*Status*@
                        <div class="form-group">
                            <div class="input-group-text" style="color:dimgrey;font-weight:bold;">Enter Currency</div>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-rupee-sign"></i></div>
                                </div>
                                <select asp-for="Loanstatus" asp-items="Model.loanstatus.MakesListinDropdown()" class="form-control"></select>
                            </div>
                        </div>
                        @*Phone*@
                        <div class="form-group">
                            <div class="input-group-text" style="color:dimgrey;font-weight:bold;">Enter Phoneno</div>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fab fa-gratipay"></i></div>
                                </div>
                                <input asp-for="Phoneno" class="form-control" />
                            </div>
                            <span asp-validation-for="Phoneno" class="text-danger"></span>
                        </div>
                        @*Image*@
                        <div class="form-group">
                            <label asp-for="CoverImage" class="control-label"></label>
                            <div class="custom-file">
                                <input asp-for="CoverImage" class="custom-file-input" id="customerfile" />
                                <label class="custom-file-label" for="customerfile">choose file</label>
                            </div>
                            <span asp-validation-for="CoverImage" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Save" class="btn btn-info btn-block rounded-0 py-2">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


